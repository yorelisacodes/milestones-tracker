<!doctype html>
<html>

<head>
  <title>Track your babies Milestones</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="font-awesome.min.css">

  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container border border-primary">

    <div class="page-header text-center">
      <h1><span class="fa fa-baby"></span>Baby Milestones App</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">


      <div class="col-lg-12 border ">
        <div class="well border ">
          <h3><span class="fa fa-user"></span> Profile</h3>

          <% if (user.local) { %>
            <p>
              <!-- <strong>Parent Name</strong>: <%= user.local.parentName %><br>
                <strong>Baby Name</strong>:<%= user.local.babyName %><br> -->
                  <strong>email</strong>: <%= user.local.email %><br>
                    <strong>password</strong>: <%= user.local.password %>
            </p>

            <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
              <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>

        </div>
      </div>


      <div class="col-lg-12 d-flex well border">
        <h3>Milestones</h3>
        <ul class="messages">
          <% for(let i=0; i<messages.length; i++) {%>
            <li class="message"  >
              <span>
                <%= messages[i].description %>
              </span>
              <span>
                <%= messages[i].msg %>
              </span>
              <span>
                <%= messages[i].height %>
              </span>
              <span>
                <%= messages[i].place %>
              </span>

              <span><i id="<%=messages[i]._id %>" class="fa fa-trash" aria-hidden="true"></i></span>
            </li>


            <% } %>
        </ul>

        <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form class="bottom-form" action="/messages" method="POST">
            <div class="d-flex well border-primary">

              <!-- <input type="text" value="<%= user.local.parentName %>" name="name"> -->
              <div>
                <label for="description">Description</label>
                <input type="text" value="" name="description">
              </div>

              <div>
                <label for="height">Height</label>
                <input type="text" value="" name="height">
              </div>

              <div>
                <label for="place">Place</label>
                <input type="text" value="" name="place">
              </div>

              <div>
                <label for="msg">Message</label>
                <input type="text" value="" name="msg">
              </div>

              <div>
                <button type="submit">Submit</button>
              </div>


            </div>

          </form>
          <% } %>


      </div>

      <script src="main.js"></script>

</body>

</html>